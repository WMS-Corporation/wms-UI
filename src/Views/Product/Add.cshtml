@model src.ViewModel.ProductViewModel

<h2>Aggiungi Prodotto</h2>

<form asp-action="Add" method="post">
    <input type="hidden" asp-for="CodProduct" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="control-label">Categoria</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label">Data di Scadenza</label>
        <input asp-for="ExpirationDate" class="form-control" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Tipo</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Aggiungi Prodotto</button>
    </div>
</form>
