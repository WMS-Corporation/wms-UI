<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - src</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/src.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .navbar {
            width: 100%;
        }

        .container-fluid {
            height: 100%;
        }

        .sidebar {
            height: 100vh;
            overflow-y: auto; 
        }

        .main-content {
            height: 100vh;
            overflow-y: auto; 
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: red;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="~/images/logo.png" alt="WMS" width="30" height="30" class="d-inline-block align-top">
                WMS
            </a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">   
            @if (User.Identity.IsAuthenticated)
            {
                <nav class="col-md-2 d-none d-md-block bg-dark sidebar">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            @await Html.PartialAsync("_SidebarLinks")
                        </ul>
                    </div>
                </nav>
                <main role="main" class="ml-sm-auto col-lg-10 px-4">
                    @RenderBody()
                </main>
            }
            else
            {
                <main role="main">
                    @RenderBody()
                </main>
            }
        </div>
    </div>
@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WMS Corporation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
