@model src.ViewModel.TaskViewModel

<h2>Modifica Task</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CodTask" />
    <div class="form-group">
        <label asp-for="CodOperator" class="control-label"></label>
        <input asp-for="CodOperator" class="form-control" />
        <span asp-validation-for="CodOperator" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductList" class="control-label">Lista Prodotti</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Codice Prodotto</th>
                    <th>Nome Prodotto</th>
                    <th>Categoria</th>
                    <th>Data Scadenza</th>
                    <th>Quantità</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ProductList.Count; i++)
                {
                    <tr>
                        <td>
                            <span>@Model.ProductList[i].CodProduct</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].CodProduct" />
                        </td>
                        <td>
                            <span>@Model.ProductList[i].Name</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                        </td>
                        <td>
                            <span>@Model.ProductList[i].Category</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].Category" />
                        </td>
                        <td>
                            <span>@Model.ProductList[i].ExpirationDate.ToShortDateString()</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].ExpirationDate" />
                        </td>
                        <td>
                            <span>@Model.ProductList[i].Stock</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].Stock" />
                        </td>
                        <td>
                            <span>@Model.ProductList[i].Type</span>
                            <input type="hidden" asp-for="@Model.ProductList[i].Type" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
</form>
